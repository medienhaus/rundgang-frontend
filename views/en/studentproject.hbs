{{> en/partials/header }}

<main class="singleproject">
    <a href="/en/programme"><div class="projectclose"></div></a>
    <a href="/en/programme"><div class="back"></div></a>

    <div class="projectmain">
        <h2 class="projecttitle">{{ studentproject.name }}</h2>

        <div class="students tagbubble">
            {{#each studentproject.authors}}
                <span>{{.}}</span>
            {{/each}}
            {{#if studentproject.credits}}
                {{#each studentproject.credits}}
                    <span>{{.}}</span>
                {{/each}}
            {{/if}}
        </div>

        {{#if studentproject.parent}}
            <div class="label">Context</div>
            <div class="tagbubble">
                {{#each bubbles.context as |hierarchyElement|}}
                    <span><a href="/en/programme/{{hierarchyElement.id}}">{{ hierarchyElement.name }}</a></span>
                {{/each}}
            </div>
        {{/if}}

        {{#if bubbles.locations.length}}
            <div class="label">Events</div>
            {{#each bubbles.locations as |location|}}
                <div class="eventinfo">
                    <div class="day">Freitag, 29.10.2021</div>
                    <div class="flexbox">
                        <div class="time">14:00â€“18:00 Uhr</div>
                        <div class="infos">
                            <div class="tags">
                                <ul>
                                    <div class="tagbubble">
                                        <span>
                                            <a href="/en/locations?coords={{location.coordinates}}">
                                                {{ location.name }}
                                            </a>
                                        </span>
                                        {{#if location.room}}
                                            <span>
                                                <a href="/orte?coords={{location.coordinates}}">
                                                    {{location.room}}
                                                </a>
                                            </span>
                                        {{/if}}
                                    </div>
                                    <li class="stream conference"><a href="">Konferenz beitreten</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/if}}

{{> en/partials/footer }}
        {{#if studentproject.thumbnail_full_size}}
            <img src="{{ studentproject.thumbnail_full_size }}" alt="" />
        {{/if}}

        {{#if studentproject.topicEn}}
            <p>{{ studentproject.topicEn }}</p>
        {{/if}}

        {{#each studentproject.content}}
            {{{ formatted_content }}}
        {{/each}}
    </div>
</main>

<script src="/assets/js/green-audio-player.min.js"></script>
<script src="/assets/js/studentproject.js"></script>

