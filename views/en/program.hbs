{{> en/partials/header }}

<main class="programm">
    <h3><a href="/en/programme">Rundgang 2021</a></h3>
    {{#if filterData}}
        <div id="filterline">
            <p>Context Filter</p>
            <div>
                {{#each filterParents as |parent|}}
                    {{#if parent.id}}
                        <ul>
                            {{#if parent.id}}
                                <li><a href="/en/programme/{{parent.id}}">{{parent.name}}</a></li>
                            {{/if}}
                        </ul>
                        {{#greaterThan ../filterParents.length @index}}
                        {{else}}
                            {{#if ../filterData.children}}
                                <ul>
                                    {{#each ../filterData.children as |child|}}
                                        <li><a href="/en/programme/{{child.id}}">{{child.name}}</a></li>
                                    {{/each}}
                                </ul>
                            {{/if}}
                        {{/greaterThan}}
                    {{/if}}
                {{/each}}
            </div>
        </div>
    {{/if}}

    {{#if substructureActive}}
        <div id="filterline">
            <p>Location Filter</p>
            <div>
                <ul>
                    <li class="location-name"><a href="/en/programme/location/52.50893832945276/13.328045756372312">Hardenbergstraße 33</a></li>
                    <li class="location-name"><a href="/en/programme/location/52.51035490505003/13.33019394102799">Universitätsbibliothek im Volkswagen-Haus</a></li>
                    <li class="location-name"><a href="/en/programme/location/52.513904723230915/13.329303512192054">Straße des 17. Juni 118</a></li>
                </ul>
            </div>
        </div>
    {{/if}}

    {{#if locationData}}
        <div id="filterline">
            <div>
                <ul>
                    <li style="color: black">{{locationData.name}}</li>
                </ul>
            </div>
        </div>
    {{/if}}

    <hr>

    <div class="projectswrap">
        {{#each studentprojects}}
            <div class="projecttile" data-ref="item" data-fakultaet="musik" data-studiengang="studiengang2" data-kontext="kontext4" data-analogdigital="+online" data-locations="hardenbergstrasse33">
                <a href="/en/c/{{ id }}">
                    <div class="image">
                        {{#if thumbnail}}
                            <img src="{{ thumbnail }}" alt="{{ title }}" width="100%" />
                        {{else}}
                            <div style="background: #ffd246; display: block; height: 190px; width: 100%"></div>
                        {{/if}}
                        <div class="flags">
                        </div>
                        <div class="hoverinfo">
                            <p>{{ topicEn }}</p>
                        </div>
                    </div>
                    <div class="info">
                        <h2>{{ name }}</h2>
                        <div>
                            {{#each authors}}
                                {{.}}{{#greaterThan ../authors.length @index}}, {{/greaterThan}}
                            {{/each}}
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</main>

{{> en/partials/footer }}
