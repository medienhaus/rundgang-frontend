{{> de/partials/header activePageFilter=true }}

<main class="programm">
    <hr>
    <h2>Filter:</h2>
    <div>parents:
        <ul>
            {{#each filterParents as |parent|}}
           <a href="/filter/structure/{{parent.id}}"> <li>{{parent.name}}</li></a>
            {{/each}}
        </ul>
    </div>
    <h3> {{filterData.name}}</h3>
    <div> children:
        <ul>
            {{#each filterData.children as |child|}}
            <a href="/filter/structure/{{child.id}}"><li>{{child.name}}</li></a>
            {{/each}}
        </ul>
    </div>
    <div class="projectswrap">
        {{#each studentprojects}}
            <div class="projecttile" data-ref="item" data-fakultaet="musik" data-studiengang="studiengang2" data-kontext="kontext4" data-analogdigital="+online" data-locations="hardenbergstrasse33">
                <a href="/c/{{ id }}">
                    <div class="image">
                        {{#if thumbnail}}
                            <img src="{{ thumbnail }}" alt="{{ title }}" width="100%" />
                        {{else}}
                            <div style="background: #ffd246; display: block; height: 160px; width: 100%"></div>
                        {{/if}}
                        <div class="flags">
                            {{#unless location}}
                                <div class="online">Nur Online</div>
                            {{/unless}}
                        </div>
                        <div class="hoverinfo">
                            <p>{{ topicDe }}</p>
                        </div>
                    </div>
                    <div class="info">
                        <h2>{{ name }}</h2>
                        <div>
                            {{#each authors}}
                                {{.}}{{#greaterThan ../authors.length @index}}, {{/greaterThan}}
                            {{/each}}
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</main>

{{> de/partials/footer }}
